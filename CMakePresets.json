{
  "version": 4,
  "cmakeMinimumRequired": {
    "major": 3,
    "minor": 25,
    "patch": 0
  },
  "configurePresets": [
    {
      "name": "ninja-multi-config-clang-debug",
      "displayName": "Ninja Multi-Config (Clang, Debug)",
      "generator": "Ninja Multi-Config",
      "binaryDir": "${sourceDir}/build/${presetName}",
      "cacheVariables": {
        "CMAKE_CXX_COMPILER": "clang++",
        "CMAKE_C_COMPILER": "clang",
        "CMAKE_BUILD_TYPE": "Debug",
        "CMAKE_CXX_STANDARD": "23",
        "IPP_ROOT": "/opt/intel/oneapi/2025.1",
        "OpenCV_DIR": "/usr/local/opencv/build"
      }
    },
    {
      "name": "ninja-multi-config-clang-release",
      "displayName": "Ninja Multi-Config (Clang, Release)",
      "generator": "Ninja Multi-Config",
      "binaryDir": "${sourceDir}/build/${presetName}",
      "cacheVariables": {
        "CMAKE_CXX_COMPILER": "clang++",
        "CMAKE_C_COMPILER": "clang",
        "CMAKE_BUILD_TYPE": "Release",
        "CMAKE_CXX_STANDARD": "23",
        "IPP_ROOT": "/opt/intel/oneapi/2025.1",
        "OpenCV_DIR": "/usr/local/opencv/build"
      }
    }
  ],
  "buildPresets": [
    {
      "name": "debug",
      "configurePreset": "ninja-multi-config-clang-debug",
      "configuration": "Debug",
      "environment": {
        "SHELL": "/bin/bash",
        "BASH_ENV": "/opt/intel/oneapi/2025.1/oneapi-vars.sh"
      }
    },
    {
      "name": "release",
      "configurePreset": "ninja-multi-config-clang-release",
      "configuration": "Release",
      "environment": {
        "SHELL": "/bin/bash",
        "BASH_ENV": "/opt/intel/oneapi/2025.1/oneapi-vars.sh"
      }
    }
  ]
}