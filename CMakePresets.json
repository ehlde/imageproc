{
  "version": 4,
  "cmakeMinimumRequired": {
    "major": 3,
    "minor": 25,
    "patch": 0
  },
  "configurePresets": [
    {
      "name": "ninja-multi-config-clang",
      "displayName": "Ninja Multi-Config",
      "generator": "Ninja Multi-Config",
      "binaryDir": "${sourceDir}/build/${presetName}",
      "cacheVariables": {
        "CMAKE_CXX_COMPILER": "clang++",
        "CMAKE_C_COMPILER": "clang",
        "CMAKE_CXX_STANDARD": "23",
        "IPP_ROOT": "/opt/intel/oneapi/2025.2",
        "OpenCV_DIR": "/usr/local/opencv/build",
        "CMAKE_GENERATOR": "Ninja Multi-Config",
        "CMAKE_CXX_FLAGS_RELEASE": "-O3 -march=native"
      }
    },
    {
      "name": "GCC",
      "displayName": "Debug GCC Ninja Multi-Config",
      "description": "Using compilers: C = /usr/bin/gcc, CXX = /usr/bin/g++",
      "binaryDir": "${sourceDir}/build/${presetName}",
      "cacheVariables": {
        "CMAKE_INSTALL_PREFIX": "${sourceDir}/build/${presetName}",
        "CMAKE_C_COMPILER": "/usr/bin/gcc",
        "CMAKE_CXX_COMPILER": "/usr/bin/g++",
        "CMAKE_BUILD_TYPE": "Debug",
        "IPP_ROOT": "/opt/intel/oneapi/2025.2",
        "OpenCV_DIR": "/usr/local/opencv/build",
        "CMAKE_GENERATOR": "Ninja Multi-Config"
      }
    },
    {
      "name": "debug-simd",
      "displayName": "Debug with SIMD",
      "generator": "Ninja Multi-Config",
      "binaryDir": "${sourceDir}/build/${presetName}",
      "cacheVariables": {
        "CMAKE_CXX_COMPILER": "clang++",
        "CMAKE_C_COMPILER": "clang",
        "CMAKE_CXX_STANDARD": "23",
        "IPP_ROOT": "/opt/intel/oneapi/2025.2",
        "OpenCV_DIR": "/usr/local/opencv/build",
        "CMAKE_GENERATOR": "Ninja Multi-Config",
        "CMAKE_BUILD_TYPE": "RelWithDebInfo",
        "CMAKE_CXX_FLAGS_RELWITHDEBINFO": "-O1 -g -march=native"
      }
    }
  ],
  "buildPresets": [
    {
      "name": "debug",
      "configurePreset": "ninja-multi-config-clang",
      "configuration": "Debug",
      "environment": {
        "SHELL": "/bin/bash",
        "BASH_ENV": "/opt/intel/oneapi/2025.1/oneapi-vars.sh",
        "LD_LIBRARY_PATH": "/usr/lib/x86_64-linux-gnu:$LD_LIBRARY_PATH"
      }
    },
    {
      "name": "release",
      "configurePreset": "ninja-multi-config-clang",
      "configuration": "Release",
      "environment": {
        "SHELL": "/bin/bash",
        "BASH_ENV": "/opt/intel/oneapi/2025.1/oneapi-vars.sh",
        "LD_LIBRARY_PATH": "/usr/lib/x86_64-linux-gnu:$LD_LIBRARY_PATH"
      }
    },
    {
      "name": "gcc-debug",
      "configurePreset": "GCC",
      "configuration": "Debug",
      "environment": {
        "SHELL": "/bin/bash",
        "BASH_ENV": "/opt/intel/oneapi/2025.1/oneapi-vars.sh",
        "LD_LIBRARY_PATH": "/usr/lib/x86_64-linux-gnu:$LD_LIBRARY_PATH"
      }
    },
    {
      "name": "debug-simd",
      "configurePreset": "debug-simd",
      "configuration": "RelWithDebInfo",
      "environment": {
        "SHELL": "/bin/bash",
        "BASH_ENV": "/opt/intel/oneapi/2025.1/oneapi-vars.sh",
        "LD_LIBRARY_PATH": "/usr/lib/x86_64-linux-gnu:$LD_LIBRARY_PATH"
      }
    }
  ]
}